generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Product {
  p_id          String         @id @default(uuid())
  p_name        String         @unique
  p_image       String?
  p_descrn      String
  price         Int
  Rating        Rating[]
  Product_Avail Product_Avail?
}

model Rating {
  id          String  @id @default(uuid())
  rate        String
  product     Product @relation(fields: [productP_id], references: [p_id])
  productP_id String
}

model Product_Avail {
  id          String  @id @default(uuid())
  status      Boolean
  product     Product @relation(fields: [productP_id], references: [p_id])
  productP_id String  @unique
}
